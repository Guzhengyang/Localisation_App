<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.valeo.psa">
    <PreferenceCategory android:title="@string/pref_car_type">
        <com.valeo.psa.view.IconPickerPreference
            android:dialogTitle="@string/dialog_title_list_preference"
            android:entries="@array/iconName"
            android:entryValues="@array/iconFile"
            android:key="@string/connected_car_type_pref_name"
            android:layout="@layout/icon_item_preference"
            android:title="@string/pref_car_type_title"
            custom:iconFile="@string/icon_default" />
        <ListPreference
            android:dialogTitle="@string/base_title_list_preference"
            android:entries="@array/base_list_preference"
            android:entryValues="@array/base_entryvalues_list_preference"
            android:key="@string/connected_car_base_pref_name"
            android:title="@string/pref_car_base_title" />
        <ListPreference
            android:dialogTitle="@string/algo_title_list_preference"
            android:entries="@array/algo_list_preference"
            android:entryValues="@array/algo_entryvalues_list_preference"
            android:key="@string/selected_algo_pref_name"
            android:title="@string/pref_algo_title" />
        <ListPreference
            android:dialogTitle="@string/model_title_list_preference"
            android:entries="@array/model_list_preference"
            android:entryValues="@array/model_entryvalues_list_preference"
            android:key="@string/machine_learning_model_pref_name"
            android:title="@string/pref_machine_learning_model" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/is_indoor_enabled_pref_name"
            android:title="@string/pref_is_indoor_enabled" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/connected_car_trame_enabled_pref_name"
            android:title="@string/pref_car_forced_trame_enabled" />
        <EditTextPreference
            android:dependency="@string/connected_car_trame_enabled_pref_name"
            android:key="@string/connected_car_trame_pref_name"
            android:title="@string/pref_car_forced_trame" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_ble_address">
        <EditTextPreference
            android:inputType="textCapCharacters"
            android:key="@string/address_connectable_pref_name"
            android:title="@string/pref_ble_address_connectable" />
        <EditTextPreference
            android:inputType="textCapCharacters"
            android:key="@string/address_connectable_pc_pref_name"
            android:title="@string/pref_ble_address_connectable_pc" />
        <EditTextPreference
            android:inputType="textCapCharacters"
            android:key="@string/address_connectable_remote_control_pref_name"
            android:title="@string/pref_ble_address_connectable_remote_control" />
        <EditTextPreference
            android:inputType="textCapCharacters"
            android:key="@string/address_front_left_pref_name"
            android:title="@string/pref_ble_address_front_left" />
        <EditTextPreference
            android:inputType="textCapCharacters"
            android:key="@string/address_front_right_pref_name"
            android:title="@string/pref_ble_address_front_right" />
        <EditTextPreference
            android:inputType="textCapCharacters"
            android:key="@string/address_left_pref_name"
            android:title="@string/pref_ble_address_left" />
        <EditTextPreference
            android:inputType="textCapCharacters"
            android:key="@string/address_middle_pref_name"
            android:title="@string/pref_ble_address_middle" />
        <EditTextPreference
            android:inputType="textCapCharacters"
            android:key="@string/address_right_pref_name"
            android:title="@string/pref_ble_address_right" />
        <EditTextPreference
            android:inputType="textCapCharacters"
            android:key="@string/address_trunk_pref_name"
            android:title="@string/pref_ble_address_trunk" />
        <EditTextPreference
            android:inputType="textCapCharacters"
            android:key="@string/address_rear_left_pref_name"
            android:title="@string/pref_ble_address_rear_left" />
        <EditTextPreference
            android:inputType="textCapCharacters"
            android:key="@string/address_back_pref_name"
            android:title="@string/pref_ble_address_back" />
        <EditTextPreference
            android:inputType="textCapCharacters"
            android:key="@string/address_rear_right_pref_name"
            android:title="@string/pref_ble_address_rear_right" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_nb_element">
        <EditTextPreference
            android:inputType="number"
            android:key="@string/rssi_log_number_pref_name"
            android:title="@string/pref_nb_element_rssi_log_number" />
        <EditTextPreference
            android:inputType="number"
            android:key="@string/rolling_av_element_pref_name"
            android:title="@string/pref_nb_element_rolling_average" />
        <EditTextPreference
            android:inputType="number"
            android:key="@string/start_nb_element_pref_name"
            android:title="@string/pref_nb_element_start" />
        <EditTextPreference
            android:inputType="number"
            android:key="@string/lock_nb_element_pref_name"
            android:title="@string/pref_nb_element_lock" />
        <EditTextPreference
            android:inputType="number"
            android:key="@string/unlock_nb_element_pref_name"
            android:title="@string/pref_nb_element_unlock" />
        <EditTextPreference
            android:inputType="number"
            android:key="@string/welcome_nb_element_pref_name"
            android:title="@string/pref_nb_element_welcome" />
        <EditTextPreference
            android:inputType="number"
            android:key="@string/long_nb_element_pref_name"
            android:title="@string/pref_nb_element_long" />
        <EditTextPreference
            android:inputType="number"
            android:key="@string/short_nb_element_pref_name"
            android:title="@string/pref_nb_element_short" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_timeout">
        <EditTextPreference
            android:inputType="number|numberDecimal"
            android:key="@string/back_timeout_pref_name"
            android:title="@string/pref_back_timeout" />
        <EditTextPreference
            android:inputType="number|numberDecimal"
            android:key="@string/thatcham_timeout_pref_name"
            android:title="@string/pref_thatcham_timeout" />
        <EditTextPreference
            android:inputType="number|numberDecimal"
            android:key="@string/crypto_pre_auth_timeout_pref_name"
            android:title="@string/pref_crypto_pre_auth_timeout" />
        <EditTextPreference
            android:inputType="number|numberDecimal"
            android:key="@string/crypto_action_timeout_pref_name"
            android:title="@string/pref_crypto_action_timeout" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_acc">
        <EditTextPreference
            android:inputType="number"
            android:key="@string/lin_acc_size_pref_name"
            android:title="@string/pref_acc_size" />
        <EditTextPreference
            android:inputType="number|numberDecimal"
            android:key="@string/correction_lin_acc_pref_name"
            android:title="@string/pref_acc_correction" />
        <EditTextPreference
            android:inputType="number|numberDecimal"
            android:key="@string/frozen_threshold_pref_name"
            android:title="@string/pref_frozen_threshold" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_user_speed">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/user_speed_enabled_pref_name"
            android:title="@string/pref_user_speed_enabled" />
        <EditTextPreference
            android:dependency="@string/user_speed_enabled_pref_name"
            android:inputType="number|numberDecimal"
            android:key="@string/wanted_speed_pref_name"
            android:title="@string/pref_wanted_speed" />
        <EditTextPreference
            android:dependency="@string/user_speed_enabled_pref_name"
            android:inputType="number"
            android:key="@string/one_step_size_pref_name"
            android:title="@string/pref_one_step_size" />
    </PreferenceCategory>
</PreferenceScreen>