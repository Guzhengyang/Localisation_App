<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sign_in_alert_message"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:padding="@dimen/vertical_padding"
        android:text="@string/sign_in_message_alert_title"
        android:textColor="@color/white"
        android:textSize="@dimen/psa_56_px" />

    <TextView
        android:id="@+id/sign_in_alert_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sign_in_message_alert_yes"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="106dp"
        android:layout_marginLeft="@dimen/status_bar_height"
        android:layout_marginRight="@dimen/status_bar_height"
        android:gravity="center"
        android:padding="@dimen/vertical_padding"
        android:text="@string/sign_in_message_alert"
        android:textColor="@color/white"
        android:textSize="@dimen/psa_40_px" />

    <View
        android:id="@+id/dummy_middle_view"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible" />

    <Button
        android:id="@+id/sign_in_message_alert_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="start"
        android:layout_margin="@dimen/vertical_padding"
        android:layout_toStartOf="@id/dummy_middle_view"
        android:background="@drawable/button_border"
        android:padding="@dimen/vertical_padding"
        android:text="@string/sign_in_message_alert_yes"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/sign_in_message_alert_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_margin="@dimen/vertical_padding"
        android:layout_toEndOf="@id/dummy_middle_view"
        android:background="@drawable/button_border"
        android:padding="@dimen/vertical_padding"
        android:text="@string/sign_in_message_alert_no"
        android:textColor="@color/white" />
</RelativeLayout>