<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    tools:showIn="@layout/psa_activity_main">

    <RelativeLayout
        android:id="@+id/main_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/car_door_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/vehicle_locked"
            android:textColor="@color/black"
            android:textSize="@dimen/psa_56_px" />

        <RelativeLayout
            android:id="@+id/door_status_switcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_door_status">

            <ImageView
                android:id="@+id/door_status_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/door_status_bg"
                android:paddingTop="@dimen/imageview_vertical_padding"
                android:src="@mipmap/slider_backgrd" />

            <ImageButton
                android:id="@+id/vehicle_locked"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:layout_toLeftOf="@+id/start_button"
                android:layout_toStartOf="@+id/start_button"
                android:adjustViewBounds="true"
                android:background="@drawable/round_button"
                android:contentDescription="@string/vehicle_locked"
                android:scaleType="fitCenter"
                android:src="@mipmap/car_closed_button"
                android:tint="@color/car_not_selected_button" />

            <ImageButton
                android:id="@+id/driver_s_door_unlocked"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:adjustViewBounds="true"
                android:background="@drawable/round_button"
                android:contentDescription="@string/driver_s_door_unlocked"
                android:scaleType="fitCenter"
                android:src="@mipmap/car_driver_door_button"
                android:tint="@color/car_not_selected_button" />

            <ImageButton
                android:id="@+id/vehicle_unlocked"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignTop="@+id/vehicle_locked"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:layout_toEndOf="@+id/start_button"
                android:layout_toRightOf="@+id/start_button"
                android:adjustViewBounds="true"
                android:background="@drawable/round_button"
                android:contentDescription="@string/vehicle_unlocked"
                android:scaleType="fitCenter"
                android:src="@mipmap/car_all_doors_button"
                android:tint="@color/car_not_selected_button" />

            <View
                android:id="@+id/dummy_space_view"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/start_button_vertical_padding"
                android:layout_below="@+id/driver_s_door_unlocked"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:contentDescription="@string/dummy_space_view"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/start_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dummy_space_view"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@drawable/round_button"
                android:contentDescription="@string/start_button"
                android:scaleType="fitCenter"
                android:src="@mipmap/start_button" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/signalReceived"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/door_status_switcher"
            android:contentDescription="@string/rssi_localization"
            android:src="@drawable/rssi_localization"
            android:background="@color/black" />

        <TextView
            android:id="@+id/debug_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:textColor="#ffffff"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/signalReceived" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/control_trunk_windows_lights"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/debug_info"
            android:paddingTop="@dimen/activity_vertical_margin" />

        <TextView
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/control_trunk_windows_lights"
            android:background="@color/tips"
            android:paddingEnd="@dimen/tips_vertical_padding"
            android:paddingLeft="@dimen/tips_vertical_padding"
            android:paddingRight="@dimen/tips_vertical_padding"
            android:paddingStart="@dimen/tips_vertical_padding"
            android:text="@string/tips"
            android:textColor="@color/white"
            android:textSize="@dimen/psa_47_px" />

        <TextView
            android:id="@+id/nfc_disclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tips"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="@string/nfc_disclaimer"
            android:textColor="@color/black"
            android:textSize="@dimen/psa_56_px" />

        <ImageView
            android:id="@+id/nfc_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/nfc_disclaimer"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/nfc_logo"
            android:paddingTop="@dimen/imageview_vertical_padding"
            android:src="@mipmap/nfc_logo" />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
